<odoo>
    <data noupdate="1">
        <record id="email_template_purchase_request_approved" model="mail.template">
            <field name="name">Purchase Request Approved</field>
            <field name="model_id" ref="Task_purchase.model_purchase_request"/>
            <field name="email_from">${(user.email or '').strip()}</field>
            <field name="subject">Purchase Request ${object.name} Approved</field>
            <field name="body_html" >
                <![CDATA[
                    <p>Dear ${object.env.user.name},</p>
                    <p>The Purchase Request <b>${object.name}</b> has been approved.</p>
                    <p>Thank you.</p>
                ]]>
            </field>
        </record>
    </data>
</odoo>