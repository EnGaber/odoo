<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="purchase_order_line_modify_in_stock_picking_form">
        <field name="name">Purchase.order.line Modify in_stock_picking Form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/> <!-- ensure this exists -->
        <field name="arch" type="xml">

          <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="note_des"/>
            </xpath>

            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="note_desc"/>
            </xpath>


            <!--
            <field name="product_id" position="after">
                <field name="Desc_Notes"/>
            </field>

            <field name="date_deadline" position="after">
                <field name="note_desc"/>
            </field>
            -->

        </field>
    </record>

</odoo>
